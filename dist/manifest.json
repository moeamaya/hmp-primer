{
  "name": "Wavma Browser",
  "version": "0.1.5",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon-34.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "css": ["css/content.css"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "128": "img/icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
